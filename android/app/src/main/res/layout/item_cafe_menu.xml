<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:background="@color/light_beige">

    <TextView
        android:id="@+id/text_item_name"
        android:layout_width="60dp"
        android:layout_height="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="25dp"
        android:gravity="top"
        android:text="@string/item_name_text"
        android:textColor="@color/text_black" />

    <TextView
        android:id="@+id/text_cafe_menu_name"
        android:layout_width="150dp"
        android:layout_height="30dp"
        app:layout_constraintStart_toStartOf="@id/text_item_name"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="60dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/border_round_stroke"
        android:gravity="center"
        android:paddingHorizontal="10dp"
        android:textAlignment="center"
        android:textColor="@color/text_black" />

    <TextView
        android:id="@+id/text_item_price"
        android:layout_width="60dp"
        android:layout_height="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="70dp"
        android:text="@string/item_price_text"
        android:textColor="@color/text_black"
        android:gravity="top" />

    <TextView
        android:id="@+id/text_cafe_menu_price"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/border_round_stroke"
        android:gravity="center"
        android:paddingHorizontal="10dp"
        android:textAlignment="center"
        android:textColor="@color/text_black"
        app:layout_constraintStart_toStartOf="@id/text_item_price"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_cafe_menu"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/border_round_no_stroke"
        android:visibility="invisible"
        android:elevation="16dp"
        android:scaleType="centerInside"
        android:padding="5dp" />


</androidx.constraintlayout.widget.ConstraintLayout>