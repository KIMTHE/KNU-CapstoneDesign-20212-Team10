<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_cafe_menu"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_margin="10dp"
    android:orientation="horizontal"
    android:background="@drawable/square_background_border_black">

    <ImageView
        android:id="@+id/img_cafe_menu"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:scaleType="fitXY"
        android:src="@drawable/ic_baseline_image_not_supported_24"
        android:background="@drawable/square_background_border_black"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical"
        android:background="@drawable/square_background_border_black">

        <TextView
            tools:text="아메리카노"
            android:id="@+id/text_cafe_menu_name"
            android:layout_width="match_parent"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_height="0dp"
            android:layout_weight="1" />


        <TextView
            android:id="@+id/text_cafe_menu_price"
            android:layout_width="match_parent"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_height="0dp"
            android:layout_weight="1"
            tools:text="3000원" />
    </LinearLayout>
</LinearLayout>
