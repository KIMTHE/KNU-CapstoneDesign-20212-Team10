<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="18.3dp"
        android:layout_marginEnd="18.7dp"
        android:layout_marginTop="11dp"
        card_view:cardCornerRadius="17dp"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/text_item_name"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="25dp"
            android:gravity="top"
            android:text="@string/item_name_text"
            android:textColor="@color/text_black" />

        <TextView
            android:id="@+id/text_cafe_menu_name"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_marginStart="70dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/border_round_stroke"
            android:gravity="center"
            android:paddingHorizontal="10dp"
            android:textAlignment="center"
            android:textColor="@color/text_black" />

        <TextView
            android:id="@+id/text_item_price"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="70dp"
            android:text="@string/item_price_text"
            android:textColor="@color/text_black"
            android:gravity="top" />

        <TextView
            android:id="@+id/text_cafe_menu_price"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_marginStart="70dp"
            android:layout_marginTop="64dp"
            android:background="@drawable/border_round_stroke"
            android:gravity="center"
            android:paddingHorizontal="10dp"
            android:textAlignment="center"
            android:textColor="@color/text_black" />

        <ImageView
            android:id="@+id/img_cafe_menu"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginVertical="10dp"
            android:layout_marginStart="250dp"
            android:background="@drawable/border_round_no_stroke"
            android:elevation="16dp"
            android:padding="5dp"
            android:scaleType="centerInside"
            android:visibility="invisible" />

    </androidx.cardview.widget.CardView>

</LinearLayout>